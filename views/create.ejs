<!-- views/create.ejs -->

<h2>Create New Data</h2>
<form action="/crud/create" method="POST" class="mt-4">
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul class="mb-0">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= typeof titleValue !== 'undefined' ? titleValue : '' %>" required>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="description" id="description" class="form-control" rows="3"><%= typeof descriptionValue !== 'undefined' ? descriptionValue : '' %></textarea>
    </div>
    <div class="mb-3">
        <label for="status" class="form-label">Status:</label>
        <select name="status" id="status" class="form-select">
            <option value="pending" <%= (typeof statusValue !== 'undefined' && statusValue === 'pending') ? 'selected' : '' %>>Pending</option>
            <option value="in-progress" <%= (typeof statusValue !== 'undefined' && statusValue === 'in-progress') ? 'selected' : '' %>>In-Progress</option>
            <option value="completed" <%= (typeof statusValue !== 'undefined' && statusValue === 'completed') ? 'selected' : '' %>>Completed</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="priority" class="form-label">Priority:</label>
        <select name="priority" id="priority" class="form-select">
            <option value="low" <%= (typeof priorityValue !== 'undefined' && priorityValue === 'low') ? 'selected' : '' %>>Low</option>
            <option value="medium" <%= (typeof priorityValue !== 'undefined' && priorityValue === 'medium') ? 'selected' : '' %>>Medium</option>
            <option value="high" <%= (typeof priorityValue !== 'undefined' && priorityValue === 'high') ? 'selected' : '' %>>High</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/crud" class="btn btn-secondary">Cancel</a>
</form>
